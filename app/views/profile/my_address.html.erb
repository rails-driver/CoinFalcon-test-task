<div class="card">
  <div class="card-header">
    Assign address
  </div>
  <div class="card-body">
      <% if current_user.addresses.length.zero? %>
        <p class="card-text">
          No address has been assigned yet
        </p>
      <% else %>
        <h5 class="card-title">Attached addresses:</h5>
        <ul>
          <% current_user.addresses.each do |address| %>
            <li><%= address.name %></li>
          <% end %>
        </ul>
      <% end %>

      <%= link_to 'Assign new address', profile_assign_address_path, method: :post, class: 'btn btn-primary' %>
  </div>
</div>